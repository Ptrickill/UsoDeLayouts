<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsoDeLayouts.Resources.AbsoluteLayout"
             Title="AbsoluteLayout"
             Background="Aqua">
    <AbsoluteLayout>
        <Button
            Text="Click me!"
            AbsoluteLayout.LayoutBounds="0.5, 0.1, 60, 100"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Background="Black"/>
        <Button
            Text=".NET MAUI"
            AbsoluteLayout.LayoutBounds="0.9, 0.5, 60, 100"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Background="Chocolate"/>
        <Button
            Text="Este es Absolute Layout"
            AbsoluteLayout.LayoutBounds="0.1, 0.5, 60, 100"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Background="Purple"/>
        <Button
            x:Name="GridLayoutButton"
            AbsoluteLayout.LayoutBounds="0.5, 0.5, 60, 100"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Text="Grid Layout"
            Clicked="GridLayoutButton_Clicked"
            Background="Blue"/>
    </AbsoluteLayout>
</ContentPage>